{
  "extends": ["airbnb", "plugin:promise/recommended"],
  "env": {
    "jest": true,
    "node": true
  },
  "rules": {
    "arrow-body-style": 0,
    "class-methods-use-this": 0,
    "no-continue": 0,
    "import/prefer-default-export": 0,
    "prefer-spread": 0,
    "no-param-reassign": 0,
    "no-underscore-dangle": 0,
    "no-await-in-loop": 0
  },
  "plugins": ["promise"]
}
